<%= simple_form_for(@pedal, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

    <%= f.input :title, as: :text, input_html: { rows: "1" } %>
    <%= f.input :rating %>
    <%= f.input :price %>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>

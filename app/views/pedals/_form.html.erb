<%= simple_form_for(@pedal, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :image_file_size, class: "alert alert-error" %>
  <%= f.full_error :image_content_type, class: "alert alert-error" %>

  	<%= f.input :image, label: "Upload an image" %> 
    <%= f.input :image_remote_url, label: "or enter a URL" %>
    <%= f.input :title, as: :text, input_html: { rows: "1" } %>
    <%= f.input :rating %>
    <!--Review the money-rails gem by RubyMoney to make price format, change currency, etc.-->
    <%= f.input :price %>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>
